<section class="margin-2">
  <h2>Small Search</h2>

  <form class="usa-search usa-search--small" role="search">
      <label class="usa-sr-only" for="search-field-small">Search</label>
      <input class="usa-input" id="search-field-small" type="search" name="search" placeholder="Search Here">
      <button class="usa-button" type="submit">
        <img src="{{ '/assets/images/search.svg' | path }}" class="usa-search__submit-icon" alt="Search">
      </button>
  </form>
</section>

<section aria-label="Small search component with select" class="margin-2">
