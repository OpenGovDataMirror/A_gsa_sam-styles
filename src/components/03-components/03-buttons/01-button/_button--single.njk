{#
    Creates a button.
    link        (string) - use "a" instead of "button". String should be any valid HREF value
    modifiers   (array)  - USA "secondary,base,outline,inverse,big,unstyled,hover,active,focus"
    smodifiers  (array)  - SDS "circle,small"
    disabled    (bool)   - adds disabled attribute 
    classes     (string) - extra classes
    custom      (string) - other attributes i.e. ( tabindex="0" onclick="alert" )
    text        (string) - text of the button 
    icon        (object) - icon before text if there is text {prefix,icon,title} 
    icon_right  (object) - icon after text if there is text {prefix,icon,title} 
#}
<{%
if link 
%}a href="{{link}}"{% 
else %}button{% 
endif 
%} class="usa-button{%
if modifiers 
%}{%
    for modifier in modifiers 
    %}{% if modifier != '' %} usa-button--{{ modifier }}{%  endif %}{%
    endfor 
%}{% 
endif 
%}{%
if smodifiers 
%}{%
    for modifier in smodifiers 
    %}{% if modifier != '' %} sds-button--{{ modifier }}{%  endif %}{%
    endfor 
%}{% 
endif 
%}{%
if classes
%} {{classes}}{%
endif
%}"{%
if custom
%} {{custom}}{%
endif
%}{%
if disabled 
%} disabled="disabled"{% 
endif 
%}>{%
if icon
%}{% render '@icon', icon, true %}
{% 
endif 
%}{%
if text 
%}{{text}}{% 
endif 
%}{%
if icon_right 
%}
{% render '@icon', icon_right %}
{% 
endif 
%}<{%
if link 
%}/a{% 
else 
%}/button{% 
endif 
%}>