<!-- Card HTML start -->
<div class="sds-card {% for modifier in modifiers %} sds-card--{{modifier}}{% endfor %}">
	{%- if header %}
		<div class="sds-card__header{% if color %} sds-card__header--{{color}}{% endif %}">
			{%- if header.icon %}
				<div class="sds-card__icon">
					{%- render '@icon', header.icon -%}
				</div>
			{% endif -%}
		</div>
	{% endif -%}

	<div class="sds-card__body">
		<h3 class="sds-card__title">{{title}}</h3>
		{% for content in body.content %}
			<p>{{content.text}}</p>
		{% endfor %}
	</div>
</div>
<!-- Card HTML end -->
